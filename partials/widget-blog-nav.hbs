{{!-- Blog Navigation Widget --}}

<div class="widget widget-blog-nav">
  <div class="wrap">
    {{#if @blog.logo}}
      <a class="logo" href="{{@blog.url}}" title="{{@blog.description}}">
        <img src="{{@blog.logo}}" alt="{{@blog.title}}">
      </a>
    {{else}}
      <a class="title" href="{{@blog.url}}" title="{{@blog.description}}">
        <em>{{@blog.title}}</em>
        <i>{{@blog.description}}</i>
      </a>
    {{/if}}
  </div>

  {{navigation}}
</div>
